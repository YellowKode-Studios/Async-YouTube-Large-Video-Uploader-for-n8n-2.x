[Unit]
Description=YouTube Async Uploader Service
After=network.target

[Service]
Type=simple
User=www-data
WorkingDirectory=/opt/yt-uploader
ExecStart=/usr/bin/node server.js
Restart=always
RestartSec=10
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=yt-uploader
Environment=NODE_ENV=production

[Install]
WantedBy=multi-user.target
